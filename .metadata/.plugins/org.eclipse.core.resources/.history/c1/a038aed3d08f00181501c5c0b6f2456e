		<table class="table table-striped table-bordered dt-responsive nowrap">

			<thead>
				<tr>
					<th>Id</th>
					<th>ProductName</th>
					<th>OpeningStock</th>
					<th>ClosingStock</th>
					<th>Sold</th>
				</tr>
			</thead>

			<tbody>
				<c:forEach items="${lp}" var="u">
					<tr>
						<td>${u.getId() }</td>
						<td>${u.getName() }</td>
						<td><div class="form-group">
								<div>
									<input type="text" class="form-control" id="Cost"
										placeholder="Enter Cost amount" name="Cost" onkeyup="sum();"
										required>
								</div></td>
						<td><div>
								<input type="text" class="form-control" id="BillingRate"
									placeholder="Enter BillingRate" name="BillingRate"
									onkeyup="sum();" readonly required>
							</div></td>
						<td><div>
								<input type="text" class="form-control" id="RetailerBillingRate"
									placeholder="Enter RetailerBillingRate"
									name="RetailerBillingRate" onkeyup="sum();" readonly required>
							</div></td>
					</tr>
				</c:forEach>
			</tbody>

		</table>
		<div class="col-sm-12 form-group">
			<center>
				<button type="submit" class="btn btn-lg btn-info">Submit</button>
				<button type="reset" class="btn btn-lg btn-info">Clear</button>
